---
import Dev from "../../layouts/TestLayout.astro";
---

<Dev title='test'>
  <main>
    <h1>I AM <span class='text-red-600'> test/index.astro</span></h1>
    <p class='instructions'>
      To get started, open the directory
      <br />
      <code class='text-2xl'>src/pages/test/index.astro</code>
      <br />
      in your project.<br />
    </p>
  </main>
</Dev>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
</style>
